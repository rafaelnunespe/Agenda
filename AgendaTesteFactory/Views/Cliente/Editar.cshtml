@model ClienteModel
@{
    ViewData["Title"] = "Editar Cliente";
}


<div class="text-center">

    <h1 class="display-4">Editar Cliente</h1>

</div>


<form asp-controller="Cliente" asp-action="Editar" method="post">
    
    <input type="hidden" asp-for="Id" />
    
    <div class="form-group">
        <label for="nome" class="form-label">Nome</label>
        <input type="text" asp-for="Nome" class="form-control" placeholder="Informe o nome completo do cliente">
        @Html.ValidationMessageFor(x => x.Nome)
    </div>

    <div class="form-group">
        <label for="email" class="form-label">E-mail</label>
        <input type="email" asp-for="Email" class="form-control" placeholder="Informe o e-mail do cliente">
        @Html.ValidationMessageFor(x => x.Email)
    </div>

    <div class="form-group">
        <label for="fone" class="form-label">Celular</label>
        <input type="number" asp-for="Celular" class="form-control" placeholder="Informe o nuúmer de contato do cliente">
        @Html.ValidationMessageFor(x => x.Celular)
    </div>

    <button type="submit" class="btn btn-primary btn-block" asp-controller="Cliente" asp-action="Editar">Editar</button>
    <a class="btn btn-secondary btn-block" asp-controller="Cliente" asp-action="Index">Voltar</a>
</form>